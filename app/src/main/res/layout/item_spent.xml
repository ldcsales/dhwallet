<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:background="@color/white"
    android:padding="16dp">

    <ImageView
        android:id="@+id/image_transaction"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_spotify" />

    <TextView
        android:id="@+id/item_spents_title"
        style="@style/Subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toTopOf="@+id/item_spents_subtitle"
        app:layout_constraintStart_toEndOf="@+id/image_transaction"
        app:layout_constraintTop_toTopOf="@+id/image_transaction"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="Leslee Moss" />

    <TextView
        android:id="@+id/item_spents_subtitle"
        style="@style/Body1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/image_transaction"
        app:layout_constraintStart_toStartOf="@+id/item_spents_title"
        app:layout_constraintTop_toBottomOf="@+id/item_spents_title"
        tools:text="Irma" />

    <TextView
        android:id="@+id/item_spent_money"
        style="@style/Subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingEnd="28dp"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="R$ 45"
        android:textColor="@color/apple"/>


</androidx.constraintlayout.widget.ConstraintLayout>