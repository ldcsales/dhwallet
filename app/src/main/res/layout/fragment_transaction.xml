<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".TransactionFragment">

    <View
        android:id="@+id/background_header_transaction"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/background_card_top"
        app:layout_constraintBottom_toBottomOf="@+id/guide_header_transaction"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_transaction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_arrow_backward"
        app:title="@string/title_transaction"
        app:titleTextColor="@color/white">

        <ImageView
            android:id="@+id/profile"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_gravity="end"
            android:layout_marginEnd="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/foto"
            tools:ignore="ContentDescription" />

    </androidx.appcompat.widget.Toolbar>

<!--    <androidx.appcompat.widget.SearchView-->
<!--        android:id="@+id/search"-->
<!--        style="@style/Widget.DHWallet.SearchView"-->
<!--        android:layout_width="0dp"-->
<!--        android:layout_height="wrap_content"-->
<!--        app:defaultQueryHint="@string/search_hint"-->
<!--        app:layout_constraintBottom_toBottomOf="@+id/guide_header_transaction"-->
<!--        app:layout_constraintEnd_toEndOf="@+id/guide_end_transaction"-->
<!--        app:layout_constraintStart_toStartOf="@+id/guide_start_transaction"-->
<!--        app:layout_constraintTop_toBottomOf="@+id/toolbar_transaction" />-->

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/entrada_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/Subtitle"
        android:layout_marginTop="151dp"
        android:layout_marginStart="55dp"
        android:layout_marginBottom="78dp"
        android:text="Entradas"
        app:layout_constraintBottom_toBottomOf="@id/guide_header_transaction"
        app:layout_constraintEnd_toEndOf="@id/guide_end_transaction"
        app:layout_constraintStart_toStartOf="@id/guide_start_transaction"
        android:textColor="@color/white"

        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/saida_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/Subtitle"
        android:layout_marginTop="151dp"
        android:layout_marginStart="236dp"
        android:layout_marginBottom="78dp"
        android:text="Saidas"
        app:layout_constraintBottom_toBottomOf="@id/guide_header_transaction"
        app:layout_constraintEnd_toEndOf="@id/guide_end_transaction"
        app:layout_constraintStart_toStartOf="@id/guide_start_transaction"
        android:textColor="@color/white"

        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/entrada"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/Subtitle"
        android:layout_marginTop="172dp"
        android:layout_marginStart="54dp"
        android:layout_marginBottom="44dp"
        app:layout_constraintBottom_toBottomOf="@id/guide_header_transaction"
        app:layout_constraintEnd_toEndOf="@id/guide_end_transaction"
        app:layout_constraintStart_toStartOf="@id/guide_start_transaction"
        android:textColor="@color/apple"

        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/saida"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/Subtitle"
        android:layout_marginTop="172dp"
        android:layout_marginStart="235dp"
        android:layout_marginBottom="44dp"
        app:layout_constraintBottom_toBottomOf="@id/guide_header_transaction"
        app:layout_constraintEnd_toEndOf="@id/guide_end_transaction"
        app:layout_constraintStart_toStartOf="@id/guide_start_transaction"
        android:textColor="@color/bittersweet"
        />

    <ImageView
        android:id="@+id/arrow_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginStart="25dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_arrow_up_green"
        android:layout_marginTop="172dp"
        android:layout_marginBottom="44dp"
        app:layout_constraintEnd_toStartOf="@id/entrada_text"
        app:layout_constraintBottom_toBottomOf="@id/guide_header_transaction"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/guide_start_transaction"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/arrow_down"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_gravity="end"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_arrow_down_red"
        android:layout_marginTop="172dp"
        android:layout_marginStart="203dp"
        android:layout_marginBottom="44dp"
        app:layout_constraintEnd_toStartOf="@id/saida_text"
        app:layout_constraintBottom_toBottomOf="@id/guide_header_transaction"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/guide_start_transaction"
        tools:ignore="ContentDescription" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_header_transaction"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="223dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_start_transaction"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_end_transaction"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp" />

    <TextView
        android:id="@+id/title_transaction"
        style="@style/Subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:text="Data"
        app:layout_constraintStart_toStartOf="@id/guide_start_transaction"
        app:layout_constraintTop_toBottomOf="@+id/guide_header_transaction" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_transaction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@+id/title_transaction"
        tools:itemCount="20"
        tools:listitem="@layout/item_spent" />

</androidx.constraintlayout.widget.ConstraintLayout>